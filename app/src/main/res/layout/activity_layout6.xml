<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout6">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineH"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="horizontal"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guidelineH"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonBack1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goBack"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonBack2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goBack"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonBack1"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonBack3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goBack"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonBack2"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonBack4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goBack"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonBack3"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonBack5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goBack"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonBack4"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:id="@+id/buttonBack6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goBack"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonBack5"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>